{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2020",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "strictNullChecks": false
    },
    "include": [
        "src/**/*",
        "scripts/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "lib": [
        "es2020"
    ]
}
